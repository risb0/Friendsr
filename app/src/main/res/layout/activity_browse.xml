<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/table"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="com.example.risbo.friendsr.BrowseActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friendsr"
        android:textSize="50dp"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Click on an eligible single user to learn more and see if you are compatible for a date!"/>

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <!-- ROW 1 -->

        <TableRow android:weightSum="1"
            android:layout_weight="0.5"
            android:layout_height="0dp"
            android:layout_width="fill_parent"


            >

            <LinearLayout

                android:orientation="vertical"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"

                           >
                <ImageButton
                    android:id="@+id/chandler"
                    android:src="@drawable/chandler"
                    style="@style/TableImage"
                    android:tag="Chandler"



                    />
                <TextView
                    style="@style/TableText"
                    android:text="Chandler"


                    />

            </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"

        >
        <ImageButton
            android:id="@+id/monica"
            android:src="@drawable/monica"
            style="@style/TableImage"
            android:tag="Monica"
            />
        <TextView
            style="@style/TableText"
            android:text="Monica"
            />

    </LinearLayout>


        </TableRow>


        <!-- ROW 2 -->

        <TableRow android:weightSum="1"
            android:layout_weight="0.5"
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            >

            <LinearLayout android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"

                >
                <ImageButton
                    android:id="@+id/rachel"
                    android:src="@drawable/rachel"
                    style="@style/TableImage"
                    android:tag="Rachel"
                    />
                <TextView
                    style="@style/TableText"
                    android:text="Rachel"
                    />

            </LinearLayout>

            <LinearLayout android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"

                >
                <ImageButton
                    android:id="@+id/joey"
                    android:src="@drawable/joey"
                    style="@style/TableImage"
                    android:tag="Joey"
                    />
                <TextView
                    style="@style/TableText"
                    android:text="Joey"
                    />

            </LinearLayout>


        </TableRow>


        <!-- ROW 3 -->


        <TableRow android:weightSum="1"
            android:layout_weight="0.5"
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            >

            <LinearLayout android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"

                >
                <ImageButton
                    android:id="@+id/ross"
                    android:src="@drawable/ross"
                    style="@style/TableImage"
                    android:tag="Ross"
                    />
                <TextView
                    style="@style/TableText"
                    android:text="Ross"
                    />

            </LinearLayout>

            <LinearLayout android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"

                >
                <ImageButton
                    android:id="@+id/phoebe"
                    android:src="@drawable/phoebe"
                    style="@style/TableImage"
                    android:tag="Phoebe"
                    />
                <TextView
                    style="@style/TableText"
                    android:text="Phoebe"
                    />

            </LinearLayout>


        </TableRow>


    </TableLayout>




</LinearLayout>

    <ImageButton
        android:id="@+id/pictureButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Profile"
        android:background="@drawable/user"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onProfileButtonClick"/>

</RelativeLayout>